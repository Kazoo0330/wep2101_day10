<div class="">
  <h1>ユーザマイページ</h1>
  <table>
    <thead>
      <th>ユーザ名</th>
      <th>メールアドレス</th>
    </thead>
    <tbody>
      <tr>
        <td><%= @user.name %></td>
        <td><%= @user.email %></td>
        <td>
          <%= link_to "編集", edit_user_path(@user.id) %>
          <%= link_to "削除", user_path(@user.id), method: :delete, data: {confirm: "ユーザー「#{@user.name}」を削除しても宜しいですか？"}%>
        </td>
      </tr>
    </tbody>
  </table>
  <%= link_to "ユーザ一覧", users_path %>
</div>
