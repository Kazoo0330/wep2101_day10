<div class="">
  <h1>ユーザ一覧</h1>
  <table>
    <thead>
      <th>ユーザ名</th>
      <th>メールアドレス</th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to "詳細", user_path(user.id)%>
          <%= link_to "編集", edit_user_path(user.id) %>
          <%= link_to "削除", user_path(user.id), method: :delete, data: {confirm: "ユーザー「#{user.name}」を削除しても宜しいですか？"}%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "ユーザ新規作成", new_user_path %>
</div>
